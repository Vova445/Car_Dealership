{
    "compilerOptions": {
        "target": "ES6",
        "module": "ESNext",
        "moduleResolution": "Node",
        "outDir": "public/dist",
        "rootDir": "scripts",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "resolveJsonModule": true,
        "baseUrl": "./",
        "paths": {
            "*": ["node_modules/*"]
        }
    },
    "include": [
        "scripts/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "public/dist"
    ]
  }
  