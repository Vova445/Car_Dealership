{
  "compilerOptions": {
      "target": "ES6",
      "module": "ESNext",
      "moduleResolution": "Node",
      "outDir": "./dist",
      "rootDir": "./src",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "resolveJsonModule": true,
      "baseUrl": "./",
      "paths": {
          "*": ["node_modules/*"]
      }
  },
  "include": [
      "src/**/*.ts"
  ],
  "exclude": [
      "node_modules",
      "dist"
  ]
}
